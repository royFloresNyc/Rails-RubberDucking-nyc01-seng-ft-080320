<% if flash[:errors]%>
    <h4>Errors: </h4>
    <% flash[:errors].each do |message| %>
        <p>- <%= message %></p>
    <% end %>
<% end %>

<%= form_for @student do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name  %><br><br>

    <%= f.label :mod %>
    <%= f.select :mod, (1..5) %><br><br>

    <%= f.submit %>

<% end %>